<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="748dp"
                android:layout_height="500dp">

                <TextView
                    android:id="@+id/new_password_textview"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="New Password" />

                <EditText
                    android:id="@+id/new_password_edittext"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:inputType="textPassword"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/new_password_textview" />

                <TextView
                    android:id="@+id/confirm_pass_textview"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/new_password_textview"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="34dp"
                    android:text="Confirm New Password" />

                <EditText
                    android:id="@+id/confirm_pass_edittext"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:inputType="textPassword"
                    android:layout_below="@+id/new_password_edittext"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/confirm_pass_textview"
                     />


                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="false"
                    android:onClick="setNewPassword"
                    android:layout_below="@+id/confirm_pass_textview"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="40dp"
                    android:text="SUBMIT" />

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="false"
                    android:layout_below="@+id/confirm_pass_edittext"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="48dp"
                    android:onClick="cancelled"
                    android:text="CANCEL" />

            </RelativeLayout>
        </ScrollView>
</LinearLayout>
