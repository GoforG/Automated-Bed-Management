<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rollbackLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.navigationdrawersample.NurseInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:id="@+id/rel8"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rel7">

                <Button
                    android:id="@+id/button_rollback"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Submit" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rel6">

                <TextView
                    android:id="@+id/text14"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="56dp"
                    android:layout_toRightOf="@+id/text13"
                    android:text="Put Target Bed-Id" />

                <TextView
                    android:id="@+id/text13"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="To Bed-Id"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rel10">

                <TextView
                    android:id="@+id/text12"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="56dp"
                    android:layout_toRightOf="@+id/text11"
                    android:text="Put Source Bed Id" />

                <TextView
                    android:id="@+id/text11"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="From Bed Id"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel10"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rel5">

                <TextView
                    android:id="@+id/text22"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="56dp"
                    android:layout_toRightOf="@+id/text23"
                    android:text="Put to ward type here" />

                <TextView
                    android:id="@+id/text23"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="To Ward Type"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rel9">

                <TextView
                    android:id="@+id/text10"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="56dp"
                    android:layout_toRightOf="@+id/text9"
                    android:text="Put ward here" />

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="To Ward"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel9"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rel4">

                <TextView
                    android:id="@+id/text20"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="56dp"
                    android:layout_toRightOf="@+id/text21"
                    android:text="Put from ward type here" />

                <TextView
                    android:id="@+id/text21"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="From Ward Type"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rel3">

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="56dp"
                    android:layout_toRightOf="@+id/text7"
                    android:text="Put ward here" />

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="From Ward"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rel2">

                <TextView
                    android:id="@+id/text66"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="56dp"
                    android:layout_toRightOf="@+id/text5"
                    android:text="Put Unit here" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Unit"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rel1">

                <TextView
                    android:id="@+id/text44"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="56dp"
                    android:layout_toRightOf="@+id/text3"
                    android:text="Put Id here" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Patient Id"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/text2200"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="56dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/bedId_label"
                    android:layout_toRightOf="@+id/bedId_label"
                    android:text="Put name here" />

                <TextView
                    android:id="@+id/bedId_label"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="Patient Name"

                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

